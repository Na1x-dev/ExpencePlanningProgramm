                  <TableColumn fx:id="closeDate" minWidth="200.0" text="Дата закрытия" />
                  <TableColumn fx:id="comment" minWidth="200.0" text="Комментарий" />
               </columns>
            </TableView>
         </children>
      </AnchorPane>
